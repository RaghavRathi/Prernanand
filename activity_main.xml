<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/prernand"
    tools:context="com.example.dell.prernanand3.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/prernand_4"
        android:id="@+id/et_main"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="CHEERS TO THE FIRST NIGHT AND ONE YEAR OF INCREDIBLE LOVE !!!!"
        android:textColor="#ff0f1f"
        android:textSize="30dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="13-07-2017"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#005ba6"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THURSDAY"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:textColor="#005ba6"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center"/>
</LinearLayout>
